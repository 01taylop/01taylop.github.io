{
  "files": {
    "include": "_sass/**/*.s+(a|c)ss",
  },
  "rules": {
    "attribute-quotes": 1,
    "bem-depth": [2, {
      "max-depth": 2,
    }],
    "border-zero": 1,
    "brace-style": [2, {
      "allow-single-line": false,
      "style": "1tbs",
    }],
    "class-name-format": [2, {
      convention: "hyphenatedbem",
    }],
    "clean-import-paths": [2, {
      "filename-extension": false,
      "leading-underscore": true,
    }],
    "declarations-before-nesting": 2,
    "empty-args": [2, true],
    "empty-line-between-blocks": 0,
    "extends-before-declarations": 2,
    "extends-before-mixins": 2,
    "final-newline": 2,
    "force-attribute-nesting": 0,
    "force-element-nesting": 0,
    "force-pseudo-nesting": 2,
    "function-name-format": 2,
    "hex-length": 2,
    "hex-notation": 2,
    "id-name-format": 2,
    "indentation": 2,
    "leading-zero": 2,
    "max-file-line-count": 0,
    "max-line-length": 0,
    "mixin-name-format": 2,
    "mixins-before-declarations": [2, {
      exclude: ["media"],
    }],
    "nesting-depth": [1, 3],
    "no-attribute-selectors": 0,
    "no-color-hex": 0,
    "no-color-keywords": 2,
    "no-color-literals": 2,
    "no-combinators": 0,
    "no-css-comments": 2,
    "no-debug": 1,
    "no-disallowed-properties": [2, {
      properties: ["font-size", "opacity", "text-overflow", "z-index"],
    }],
    "no-duplicate-properties": [2, {
      exclude: [],
    }],
    "no-empty-rulesets": 1,
    "no-extends": 0,
    "no-ids": 0,
    "no-important": 0,
    "no-invalid-hex": 2,
    "no-mergeable-selectors": 1,
    "no-misspelled-properties": [2, {
      "extra-properties": ["interpolation-mode", "-webkit-overflow-scrolling"],
    }],
    "no-qualifying-elements": 0,
    "no-trailing-whitespace": 2,
    "no-trailing-zero": 2,
    "no-transition-all": 1,
    "no-universal-selectors": 0,
    "no-url-domains": 2,
    "no-url-protocols": 2,
    "no-vendor-prefixes": 0,
    "no-warn": 0,
    "one-declaration-per-line": 2,
    "placeholder-in-extend": 2,
    "placeholder-name-format": 2,
    "property-sort-order": [2, {
      order: "smacss",
    }],
    "property-units": 0,
    "pseudo-element": 2,
    "quotes": 2,
    "shorthand-values": 2,
    "single-line-per-selector": 0,
    "space-after-bang": 2,
    "space-after-colon": 2,
    "space-after-comma": 2,
    "space-around-operator": 2,
    "space-before-bang": 2,
    "space-before-brace": 2,
    "space-before-colon": 2,
    "space-between-parens": 2,
    "trailing-semicolon": 2,
    "url-quotes": 2,
    "variable-for-property": [2, {
      properties: [],
    }],
    "variable-name-format": 2,
    "zero-unit": 2,
  },
}
